# Exclude source code and test files
src/**/*.ts
src/test/**
*.map

# Exclude build tools and config
esbuild.js
tsconfig.json
eslint.config.mjs

# Exclude large dev-only dependencies
node_modules/typescript/**
node_modules/eslint/**
node_modules/@typescript-eslint/**
node_modules/jest/**
node_modules/@jest/**
node_modules/puppeteer/**
node_modules/puppeteer-core/**
node_modules/@marp-team/**
node_modules/playwright/**
node_modules/playwright-core/**
node_modules/chromium/**
node_modules/.bin/**
node_modules/@babel/**
node_modules/@types/**
node_modules/ts-jest/**
node_modules/esbuild/**
node_modules/@esbuild/**

# Exclude lock files and git
.git
.gitignore
pnpm-lock.yaml
package-lock.json

# Exclude development docs
CHANGELOG.md

# Exclude tests and tmp from build
tests/**
tmp/**

# Ensure necessary static resources are included
!src/html/**
!imgs/**
!node_modules/@vscode/codicons/**
